<resources>

    <!--  application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--沉浸式顶部状态栏-->
    <style name="AppTheme_transparent" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--&lt;!&ndash; 全屏主题&ndash;&gt;-->
    <!--<style name="NoActivityFullscreen" parent="Theme.AppCompat.Light.NoActionBar">-->
    <!--<item name="windowNoTitle">true</item>-->
    <!--<item name="windowActionBar">false</item>-->
    <!--<item name="android:windowFullscreen">true</item>-->
    <!--</style>-->
    <!--自定义Dialog，进去出来的动画-->
    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_anim_in</item>
        <item name="android:windowExitAnimation">@anim/pop_anim_out</item>
    </style>
    <!-- 设置透明度主题-->
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- toolbar主题,记得加上颜色属性这样才能沉浸式布局-->
    <style name="TAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--主页顶部-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
</resources>
